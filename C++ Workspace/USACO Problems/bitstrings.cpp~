#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
typedef pair<int, int> pii;

int main(){

	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    int N;
    cin >> N;
    ll ans =1 ;
    for(int i = 1; i < N; i++){
        ans = 2 * ans % 1000000007;
    }
    cout << ans % 1000000007;


}

